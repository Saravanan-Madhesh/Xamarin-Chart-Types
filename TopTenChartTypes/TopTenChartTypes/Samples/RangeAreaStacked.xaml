<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:chart="clr-namespace:Syncfusion.SfChart.XForms;assembly=Syncfusion.SfChart.XForms"
             Title = "Stacked Range Area Chart"
             x:Class="TopTenChartTypes.RangeAreaStacked">

    <chart:SfChart x:Name="sfchart"  >
        <chart:SfChart.Title>
            <chart:ChartTitle Text= "Charlie Brown" TextColor="Black" FontSize="18" FontAttributes="Bold">
            </chart:ChartTitle>
        </chart:SfChart.Title>
       

        <chart:SfChart.PrimaryAxis  >
            <chart:DateTimeAxis x:Name="primaryAxis"  >
                <chart:DateTimeAxis.AxisLineStyle>
                    <chart:ChartLineStyle StrokeColor="Black" StrokeWidth="3" ></chart:ChartLineStyle>
                </chart:DateTimeAxis.AxisLineStyle>
                <chart:DateTimeAxis.Title>
                    <chart:ChartAxisTitle Text="Period" TextColor="Black" FontSize="14" FontAttributes="Bold" >
                    </chart:ChartAxisTitle>
                </chart:DateTimeAxis.Title>
                <chart:DateTimeAxis.LabelStyle>
                    <chart:ChartAxisLabelStyle  TextColor="Black" />
                </chart:DateTimeAxis.LabelStyle>
            </chart:DateTimeAxis>
        </chart:SfChart.PrimaryAxis>

        <chart:SfChart.SecondaryAxis>
            <chart:NumericalAxis>
                <chart:NumericalAxis.AxisLineStyle>
                    <chart:ChartLineStyle StrokeColor="Black" StrokeWidth="3" ></chart:ChartLineStyle>
                </chart:NumericalAxis.AxisLineStyle>
                <chart:NumericalAxis.Title>
                    <chart:ChartAxisTitle Text="Price" TextColor="Black" FontSize="14" FontAttributes="Bold">
                    </chart:ChartAxisTitle>
                </chart:NumericalAxis.Title>
            </chart:NumericalAxis>
        </chart:SfChart.SecondaryAxis>

        <chart:SfChart.Series>
            <chart:StackingAreaSeries  x:Name="series3" Color="Olive" 
                          XBindingPath ="Date"  
                          StrokeColor="Green" 
                          YBindingPath ="High"
                          EnableTooltip="true"/>
            <chart:StackingAreaSeries  x:Name="series2" Color="#FFAE42" 
                          XBindingPath ="Date"  
                          StrokeColor="Green" 
                          YBindingPath ="High"
                          EnableTooltip="true"/>
            <chart:StackingAreaSeries  x:Name="series1" Color="Black" 
                          XBindingPath ="Date"  
                          StrokeColor="Green" 
                          YBindingPath="High"
                          EnableTooltip="true"/>
        </chart:SfChart.Series>

    </chart:SfChart>
</ContentPage>